{% schema %}
{
  "name": "Separator Line",
  "settings": [
    {
      "type": "range",
      "id": "top_spacing",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Top Spacing",
      "default": 20
    },
    {
      "type": "range",
      "id": "bottom_spacing",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Bottom Spacing",
      "default": 20
    },
    {
      "type": "range",
      "id": "line_thickness",
      "min": 1,
      "max": 10,
      "step": 1,
      "unit": "px",
      "label": "Line Thickness",
      "default": 1
    }
  ],
  "presets": [
    {
      "name": "Separator Line",
      "category": "Decorative"
    }
  ]
}
{% endschema %}

<style>
  .separator-section {
    padding-top: {{ section.settings.top_spacing }}px;
    padding-bottom: {{ section.settings.bottom_spacing }}px;
  }
  .separator-line {
    height: {{ section.settings.line_thickness }}px;
    background-color: rgba(var(--color-foreground),.08);
    border: none;
  }
</style>

<div class="separator-section page-width">
  <hr class="separator-line">
</div>